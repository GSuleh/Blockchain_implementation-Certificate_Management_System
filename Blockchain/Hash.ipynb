    "import hashlib\n",
    "\n",
    "class Hash:\n",
    "\n",
    "        \n",
    "    def toSHA1(self, plain_text):\n",
    "        \n",
    "        hash = hashlib.sha1()\n",
    "        hash.update(plain_text.encode('utf-8'))\n",
    "        \n",
    "        \n",
    "        return hash.hexdigest()"
   ]
  },
